<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="cornerRadius">@dimen/main_screen_radius_button</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingVertical">0dp</item>
    </style>

    <style name="RefreshClearButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="MeteDataStyle">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/PM_gray</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="ValueOfMetaDataStyle" parent="MeteDataStyle">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="layout_constraintHorizontal_bias">1.0</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">120dp</item>
    </style>

    <style name="SettingsSwitchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_of_settings_button</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="SettingsButtonStyle" parent="SettingsSwitchStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingEnd">@dimen/margin_12</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/colorSecondary</item>
    </style>

    <style name="BottomButtonBarStyle">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="iconTint">?attr/colorOnBackground</item>
        <item name="android:textFontWeight">400</item>
        <item name="iconPadding">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="ScreenTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="ButtonBackStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="icon">@drawable/arrow_back_icon_16dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@string/back</item>
    </style>
    
    <style name="textSearchResultStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
    
    <style name="placeholderLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="placeholderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>