<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_new_playlist"
        style="@style/RefreshClearButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="46dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_refresh"
        android:clickable="true"
        android:enabled="true"
        android:text="@string/new_playlist" />

    <LinearLayout
        android:id="@+id/placeholder"
        style="@style/placeholderLayoutStyle"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="106dp"
        android:gravity="center_horizontal"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/no_results"
            android:src="@drawable/no_results" />

        <TextView
            style="@style/placeholderTextStyle"
            android:layout_marginVertical="16dp"
            android:text="@string/no_playlists" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/existing_playlists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_12"
        android:layout_marginTop="106dp"
        android:orientation="vertical"
        android:visibility="gone" />
</FrameLayout>